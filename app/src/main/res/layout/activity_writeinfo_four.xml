<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/title"/>

    <include layout="@layout/include_writeinfo_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="28dp"
                android:text="医院名称"
                android:textColor="@color/text_black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/hospital_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/shape_edit_bg"
                android:hint="请输入救治医院名称"
                android:paddingBottom="15dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="15dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/gray_ccc"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="12sp"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:text="科室及床号"
                android:textColor="@color/text_black"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/department_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/shape_edit_bg"
                android:hint="请输入科室及病床号"
                android:paddingBottom="15dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="15dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/gray_ccc"
                android:textCursorDrawable="@drawable/shape_cursor"
                android:textSize="12sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:text="查勘人员"
                android:textColor="@color/text_black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/survey_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/shape_edit_bg"
                android:hint=""
                android:paddingBottom="15dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="15dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/gray_ccc"
                android:textSize="12sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:text="查勘时间"
                android:textColor="@color/text_black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:background="@drawable/shape_edit_bg"
                android:drawableRight="@drawable/icon_down"
                android:hint="请选择查勘日期"
                android:paddingBottom="15dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="15dp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/gray_ccc"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/next_tv"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/ripple_selector_item_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>