<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="21dp"
    android:paddingTop="21dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/round1_tv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/selector_round"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorPrimary"/>

        <View
            android:id="@+id/line1_tv"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_round"/>

        <TextView
            android:id="@+id/round2_tv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/selector_round"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorPrimary"/>

        <View
            android:id="@+id/line2_tv"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_round"/>

        <TextView
            android:id="@+id/round3_tv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/selector_round"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/colorPrimary"/>

        <View
            android:id="@+id/line3_tv"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_round"/>

        <TextView
            android:id="@+id/round4_tv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/selector_round"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/colorPrimary"/>

        <View
            android:id="@+id/line4_tv"
            android:layout_width="40dp"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_round"/>

        <TextView
            android:id="@+id/round5_tv"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@drawable/selector_round"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/status1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:text="基本资料"
            android:textColor="@color/selector_rount_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/status2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:text="伤者情况"
            android:textColor="@color/selector_rount_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/status3_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:text="工作经历"
            android:textColor="@color/selector_rount_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/status4_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:text="护理情况"
            android:textColor="@color/selector_rount_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/status5_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传资料"
            android:textColor="@color/selector_rount_text"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>